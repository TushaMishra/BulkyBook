@model RoleManagementVM

<div class="card shadow border-0 mt-0">
    <div class="card-header shadow border-0 mt-0">
        <div class="col-12 text-center">
            <h2 class="@*text-white*@ text-primary py-2">Manage User Role</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="ApplicationUser.Id" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        @*<div asp-validation-summary="ModelOnly"></div> *@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="ApplicationUser.Name" readonly type="text" class="form-control border-0 shadow" />
                            <label asp-for="ApplicationUser.Name" class="ms-2"></label>
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="ApplicationUser.Role" asp-items="@Model.RoleList" class="form-select border-0 shadow"></select>
                        </div>
                        @{
                            var companyVisible = "display:none";
                        }
                        @if (Model.ApplicationUser.Role == SD.Role_Company)
                        {
                            companyVisible = "display:block";
                        }
                        <div class="form-floating py-2 col-12">
                            <select asp-for="ApplicationUser.CompanyId" style="@companyVisible" asp-items="@Model.CompanyList" class="form-select border-0 shadow"></select>
                        </div>
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btno-primary form-control">Update Role</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-for="ApplicationUser.CompanyId" asp-action="Index" class="btn @*btn-outline-primary*@ btn-outline-secondary border form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <img src="" width="100%" style="border-radius: 5px; border: 1px solid #bbb9b9" />
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
        <script>
            $(document).ready(function (){
            $('#ApplicationUser_Role').change(function () {
                    var selection = $('#ApplicationUser_Role Option:Selected').text();
                    if (selection == 'Company'){
                        $('#ApplicationUser_CompanyId').show();
                    }
                    else{
                        $('#ApplicationUser_CompanyId').hide();
                    }
                })
            })
        </script>
}